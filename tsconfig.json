{
  "extends": "@tsconfig/react-native/tsconfig.json",
  "compilerOptions": {
    "noImplicitAny": true,
    "noEmit": false,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "strict": true,
    "strictNullChecks": true,
    "lib": ["dom", "dom.iterable", "esnext", "webworker"],
    "typeRoots": ["./src/@types", "./node_modules/@types"],
    "types" : ["node"]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
